  <version>3.0.0</version>
  <description>PLG_JOOMGALLERY_JOOMJCOM_DESC</description>
  <files>
    <filename plugin="joomjcom">joomjcom.php</filename>
    <filename>index.html</filename>
  </files>
  <languages folder="language">
    <language tag="de-DE">de-DE/de-DE.plg_joomgallery_joomjcom.ini</language>
    <language tag="de-DE">de-DE/de-DE.plg_joomgallery_joomjcom.sys.ini</language>
