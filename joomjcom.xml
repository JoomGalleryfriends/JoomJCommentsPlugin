  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="image" type="radio" default="1" label="PLG_JOOMGALLERY_JOOMJCOM_IMAGE_COMMENTS" description="PLG_JOOMGALLERY_JOOMJCOM_IMAGE_COMMENTS_DESCRIPTION">
          <option value="0">No</option>
          <option value="1">Yes</option>
        </field>
        <field name="category" type="radio" default="1" label="PLG_JOOMGALLERY_JOOMJCOM_CATEGORY_COMMENTS" description="PLG_JOOMGALLERY_JOOMJCOM_CATEGORY_COMMENTS_DESCRIPTION">
          <option value="0">No</option>
          <option value="1">Yes</option>
        </field>
      </fieldset>
    </fields>
